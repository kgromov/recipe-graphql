type Query {
    category(id: ID): Category
    categories: [Category]
}

type Category {
    id: ID!,
    name: String!
    recipes: [Recipe]
}

type Recipe {
    id: ID!,
    description: String!,
    prepTime: Int,
    cookTime: Int,
    servings: Int,
    source: String,
    url: String,
    notes: String,
    difficulty: Difficulty,
    category: Category
}

enum Difficulty {
    EASY, MODERATE, KIND_OF_HARD, HARD
}


