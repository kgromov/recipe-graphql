type Query {
#    recipe(id: ID): Recipe
#    recipes: [Recipe]
    category(id: ID): Category
    categories: [Category]
}

type Mutation {
    addRecipe(description: String): Recipe
    addRecipeWithPayload(recipeDto: RecipeDto): Recipe
    addCategory(name: String): Category
}

type Category {
    id: ID!,
    name: String!
    recipes: [Recipe]
}

type Recipe {
    id: ID!,
    description: String!,
    prepTime: Int,
    cookTime: Int,
    servings: Int,
    source: String,
    url: String,
    notes: String,
    difficulty: Difficulty,
    category: Category
}

input RecipeDto {
    description: String!,
    prepTime: Int,
    cookTime: Int,
    servings: Int,
    source: String,
    url: String,
    notes: String,
    difficulty: Difficulty,
    categoryId: String
}

enum Difficulty {
    EASY, MODERATE, KIND_OF_HARD, HARD
}


