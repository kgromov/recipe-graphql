type Query {
    recipe(id: ID): Recipe
    getRecipes: [Recipe]
}

type Subscription {
    recipes: Recipe
}

type Recipe {
    id: ID!,
    description: String!,
    prepTime: Int,
    cookTime: Int,
    servings: Int,
    source: String,
    url: String,
    notes: String,
    difficulty: Difficulty
}

enum Difficulty {
    EASY, MODERATE, KIND_OF_HARD, HARD
}


